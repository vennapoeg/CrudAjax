@model GrudAjax.Models.Customer

@{
  ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h4>Are you sure you want to delete this customer?</h4>
<hr />

<form asp-action="Delete" method="post" enctype="multipart/form-data">
  <input type="hidden" asp-for="Id" />

  <div class="form-group">
    <label asp-for="FirstName" class="control-label"></label>
    <input class="form-control" readonly value="@Model.FirstName" />
  </div>

  <div class="form-group">
    <label asp-for="LastName" class="control-label"></label>
    <input class="form-control" readonly value="@Model.LastName" />
  </div>

  <div class="form-group">
    <label asp-for="EmailId" class="control-label"></label>
    <input class="form-control" readonly value="@Model.EmailId" />
  </div>

  <div class="form-group">
    <label class="control-label">Country</label>
    <input class="form-control" readonly value="@Model.City?.Country?.Name" />
  </div>

  <div class="form-group">
    <label class="control-label">City</label>
    <input class="form-control" readonly value="@Model.City?.Name" />
  </div>

  <div class="form-group">
    <label class="control-label">Profile Photo</label><br />
    <img id="PreviewPhoto" src="~/images/@(Model.PhotoUrl ?? "noimage.png")" alt="Profile Photo" width="125" height="125" class="img-thumbnail" />
  </div>

  <div class="form-group mt-3">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
</form>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





