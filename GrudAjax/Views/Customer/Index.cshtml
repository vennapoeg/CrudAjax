@model IEnumerable<GrudAjax.Models.Customer>

@{
  ViewData["Title"] = "Customer List";
}

<h2>Customer List</h2>

<p>
  <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>City</th>
    <th>Photo</th>
  </tr>
  </thead>
  <tbody>
  @if (!Model.Any())
  {
    <tr>
      <td colspan="5" class="text-center">No customers found.</td>
    </tr>
  }
  else
  {
    foreach (var item in Model)
    {
      <tr>
        <td>@item.FirstName</td>
        <td>@item.LastName</td>
        <td>@item.EmailId</td>
        <td>@item.City</td>
        <td>
          @if (!string.IsNullOrEmpty(item.PhotoUrl))
          {
            <img src="@Url.Content(item.PhotoUrl)" alt="Photo" width="60" height="60" style="object-fit:cover;" />
          }
          else
          {
            <span>No photo</span>
          }
        </td>
      </tr>
    }
  }
  </tbody>
</table>





